<%- include("includes/head"); %>

<%- include("includes/navbar"); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-4">
            <h1 class="text-center">Contato</h1>
            <p class="text-center lead">Crie ou edite seu contato abaixo</p>

            <%- include("includes/messages") %>

            <% if(contact._id) { %> 
                <form action="/contact/edit/<%= contact._id %>" method="POST" class="d-flex flex-column gap-3">
            <% } else { %> 
                <form action="/contact/register" method="POST" class="d-flex flex-column gap-3">
            <% } %> 
            
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <label>Nome</label>
                    <input value="<%= contact.name  %>" type="text" class="form-control" name="name" placeholder="Insira seu email">
                </div>
                <div class="form-group">
                    <label>Sobrenome</label>
                    <input value="<%= contact.lastname  %>" type="text" class="form-control" name="lastname" placeholder="Insira seu email">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input value="<%= contact.email  %>" type="email" class="form-control" name="email" placeholder="Insira seu email">
                </div>
                <div class="form-group">
                    <label>Telefone</label>
                    <input value="<%= contact.tel  %>" type="tel" class="form-control" name="tel" placeholder="Insira seu email">
                </div>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </form>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include("includes/footer"); %>