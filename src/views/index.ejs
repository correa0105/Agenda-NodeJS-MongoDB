<%- include("includes/head"); %>

<%- include("includes/navbar"); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-4">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">Contatos abaixo.</p>

            <%- include("includes/messages") %>

            <% if(contacts.length > 0) { %> 

            <div class="responsive-table">
                <table class="table my-4">
                    <% contacts.forEach(contact => { %>
                        <tr>
                            <td><%= contact.name %></td>
                            <td><%= contact.lastname %></td>
                            <td><%= contact.email %></td>
                            <td><%= contact.tel %></td>
                            <td><a href="/contact/index/<%= contact._id %>">Editar</a></td>
                            <td><a class="text-danger" href="/contact/delete/<%= contact._id %>">Deletar</a></td>
                        </tr>
                    <% }) %>
                </table>
            </div>

            <% } else { %> 
                <p class="text-center">NÃ£o existe contatos em sua agenda</p>
            <% } %> 

        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include("includes/footer"); %>